extends layout

block content
    div(class="header")
        a.button-add(href='/user') 
            img(src="/images/PPNLogo.png" alt="Image Title" height="175" width="300")
    div(class="about")
        a.scanBtn(href='/about', class="sans-serif") About Us
        a.scanBtn(href='/future', class="sans-serif") Future
    H1 Hello #{currUser}
    form(method='POST' action='')
        div.form-group
            if selZip == ''
                p Select a location to edit
                select#name.form-control(name='zip_sel', value='')
                    option(value='', selected=true)
                    each item in Object.keys(userData.locations)
                        option #{item}
                p or add a new one
                input#name.form-control(type='text', name='newzip_inpt' value='')
            else
                h3 Current insects
                if userBugs.length > 0
                    each item in userBugs
                        label(for=(item+"_chkbx")) #{item}: 
                        input(type='checkbox', name=(item+"_chkbx"), checked=true)
                        br
                else
                    p no entries (yet!) 
                h3 Recommended insects (based on location)
                if recommendBugs.length > 0
                    each item in recommendBugs
                        label(for=(item+"_chkbx")) #{item}: 
                        input(type='checkbox', name=(item+"_chkbx"), checked=false)
                        br
                else
                    p no entries (yet!)
                h3 Add a new entry
                input#name.form-control(type='text', name='newbug_inpt' value='')
            br
            button.btn.btn-primary(type='submit') Submit